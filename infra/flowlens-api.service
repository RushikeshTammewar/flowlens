[Unit]
Description=FlowLens API
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/flowlens
ExecStart=/home/ubuntu/flowlens/.venv/bin/uvicorn backend.app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5
Environment=PYTHONUNBUFFERED=1
EnvironmentFile=-/home/ubuntu/flowlens/.env

[Install]
WantedBy=multi-user.target
